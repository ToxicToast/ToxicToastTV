# Server Configuration
PORT=8080
GRPC_PORT=9090
ENVIRONMENT=development
LOG_LEVEL=info

# Base URL for generating short URLs
BASE_URL=http://localhost:8080

# Authentication
AUTH_ENABLED=false

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=
DB_NAME=link-service
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25
DB_MAX_LIFETIME=5m

# Server Timeouts
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s
SERVER_IDLE_TIMEOUT=60s

# Keycloak Configuration (optional)
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=link-service
KEYCLOAK_CLIENT_ID=link-service
KEYCLOAK_CLIENT_SECRET=
KEYCLOAK_PUBLIC_KEY=

# Kafka/Redpanda Configuration (optional)
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=link-service-group
KAFKA_TOPIC_PREFIX=link
KAFKA_TOPIC_LINK_EVENTS=link.events.link
KAFKA_TOPIC_CLICK_EVENTS=link.events.click

# Redis Configuration (optional, for caching)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# Background Jobs Configuration
LINK_EXPIRATION_ENABLED=true
LINK_EXPIRATION_INTERVAL=1h
