# Gateway Service Configuration

# Server ports
HTTP_PORT=8080
GRPC_PORT=9090

# Development Mode (enables Swagger UI at /swagger)
DEV_MODE=true

# CORS
ENABLE_CORS=true

# Rate Limiting
RATE_LIMIT_RPS=100
RATE_LIMIT_BURST=200

# Keycloak Authentication (Optional)
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=toxictoast
KEYCLOAK_CLIENT_ID=gateway

# Backend Service URLs
BLOG_SERVICE_URL=blog-service:9090
LINK_SERVICE_URL=link-service:9090
FOODFOLIO_SERVICE_URL=foodfolio-service:9090
NOTIFICATION_SERVICE_URL=notification-service:9090
SSE_SERVICE_URL=sse-service:9090
TWITCHBOT_SERVICE_URL=twitchbot-service:9090
WEBHOOK_SERVICE_URL=webhook-service:9090

# Kafka (from shared config)
KAFKA_BROKERS=localhost:19092

# Database (not needed for gateway, but inherited from shared config)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=gateway
