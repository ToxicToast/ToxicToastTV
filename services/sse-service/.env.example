# Environment
ENVIRONMENT=development

# Server Configuration
PORT=8084
GRPC_PORT=9094

# Server Timeouts (seconds)
SERVER_READ_TIMEOUT=15
SERVER_WRITE_TIMEOUT=15
SERVER_IDLE_TIMEOUT=60

# Kafka Configuration
KAFKA_BROKERS=localhost:19092
KAFKA_GROUP_ID=sse-service
# KAFKA_TOPICS - see services/sse-service/pkg/config/config.go for full list
KAFKA_AUTO_OFFSET_RESET=latest

# SSE Configuration
SSE_MAX_CLIENTS=1000
SSE_HEARTBEAT_SECONDS=30
SSE_EVENT_BUFFER_SIZE=100
SSE_HISTORY_SIZE=100

# SSE Background Jobs Configuration
SSE_CLIENT_CLEANUP_ENABLED=true
SSE_CLIENT_CLEANUP_INTERVAL=5m
SSE_CLIENT_CLEANUP_INACTIVE_TIMEOUT=30m

# CORS Configuration
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Last-Event-ID

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MIN=60
RATE_LIMIT_BURST_SIZE=10

# Database (optional)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=sse_db
DB_SSLMODE=disable

# Authentication (optional)
AUTH_ENABLED=false
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=toxictoast
KEYCLOAK_CLIENT_ID=sse-service
