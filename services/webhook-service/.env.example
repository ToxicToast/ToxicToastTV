# Server Configuration
GRPC_PORT=9095

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=webhook_service

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=webhook-service
# Specify explicit topic names (wildcards not supported)
# See services/webhook-service/pkg/config/config.go for full list of topics
KAFKA_TOPICS=user.created,user.updated,user.deleted,auth.registered,auth.login,blog.posts,blog.comments,blog.categories,blog.tags,blog.media,twitchbot.streams,twitchbot.messages,twitchbot.viewers,twitchbot.clips,twitchbot.commands,link.links,link.clicks

# Webhook Delivery Configuration
WEBHOOK_MAX_RETRIES=5
WEBHOOK_INITIAL_RETRY_DELAY_SECONDS=5
WEBHOOK_MAX_RETRY_DELAY_SECONDS=300
WEBHOOK_TIMEOUT_SECONDS=30
WEBHOOK_WORKER_COUNT=10
WEBHOOK_QUEUE_SIZE=1000
WEBHOOK_RETRY_CHECK_INTERVAL_SECONDS=60
