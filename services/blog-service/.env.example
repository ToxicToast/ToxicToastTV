# Server Configuration
PORT=8080
GRPC_PORT=9090
ENVIRONMENT=development
LOG_LEVEL=info

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=
DB_NAME=blog-service
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25
DB_MAX_LIFETIME=5m

# Server Timeouts
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s
SERVER_IDLE_TIMEOUT=60s

# Keycloak Configuration
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=blog-service
KEYCLOAK_CLIENT_ID=blog-service
KEYCLOAK_CLIENT_SECRET=
# Keycloak Public Key (will be fetched automatically if not set)
KEYCLOAK_PUBLIC_KEY=

# Kafka/Redpanda Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=blog-service-group
KAFKA_TOPIC_PREFIX=blog

# Kafka Topics
KAFKA_TOPIC_POST_EVENTS=blog.events.post
KAFKA_TOPIC_COMMENT_EVENTS=blog.events.comment
KAFKA_TOPIC_MEDIA_EVENTS=blog.events.media

# Media Storage Configuration
MEDIA_STORAGE_PATH=./uploads
MEDIA_MAX_SIZE=10485760
MEDIA_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp

# External Services (uncomment as needed)
# REDIS_URL=redis://localhost:6379
# ELASTICSEARCH_URL=http://localhost:9200
# SMTP_HOST=localhost
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
