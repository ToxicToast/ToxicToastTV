# Server Configuration
PORT=8083
GRPC_PORT=9093
ENVIRONMENT=development
LOG_LEVEL=info

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=twitchbot_db
DB_SSL_MODE=disable
DB_MAX_CONNECTIONS=25
DB_MAX_IDLE_CONNECTIONS=5
DB_CONNECTION_MAX_LIFETIME=300s

# Authentication
AUTH_ENABLED=false

# Keycloak Configuration (if AUTH_ENABLED=true)
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=toxictoast
KEYCLOAK_CLIENT_ID=twitchbot-service

# Kafka Configuration
# Note: Topic names are now hardcoded as granular topics per KAFKA_TOPICS.md
# Example topics: twitchbot.stream.started, twitchbot.message.received, etc.
KAFKA_BROKERS=localhost:19092

# Twitch Configuration
TWITCH_CHANNEL=your_channel_name
TWITCH_CLIENT_ID=your_client_id
TWITCH_CLIENT_SECRET=your_client_secret
TWITCH_ACCESS_TOKEN=your_access_token
TWITCH_BOT_USERNAME=your_bot_username
TWITCH_IRC_SERVER=irc.chat.twitch.tv
TWITCH_IRC_PORT=6667

# Twitch IRC Debug (set to true to see all IRC messages)
TWITCH_IRC_DEBUG=false
